	$vbox/AmmoV.text = str($\"../../Gun\".ammo)
	
func _input(event):
	if event.is_action_pressed(\"ui_accept\") or event.is_action_pressed(\"ui_cancel\"):
		for i in $vbox.get_children():
			i.release_focus()
