	# pause is spacebar
var not_paused := true

func _process(_delta) -> void:
	if Input.is_action_just_pressed(\"pause\"):
		if not_paused:
			get_tree().paused = true
			not_paused = false
			visible = true
		else:
			get_tree().paused = false
			not_paused = true
			visible = false
"

